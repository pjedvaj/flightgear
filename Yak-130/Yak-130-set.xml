	<!-- Keyboard shortcuts -->

	<input>
		<keyboard>
  
			<key n="125">
				<name>}</name>
				<desc>Engine autostart</desc>
				<binding>
					<command>nasal</command>
					<script>
						#Yak-130.engines.engine1.autostart();
						#settimer( func { Yak-130.engines.engine2.autostart(); }, 12 );
						yasimengines.autostart();		 
					</script>
               
				</binding>
			</key>
       
			<key n="78">
				<name>N</name>
				<desc>Extend speedbrake</desc>
				<binding>
					<command>property-adjust</command>
					<property>/controls/flight/speedbrake</property>
					<step type="double">0.2</step>
					<min type="double">0</min>
					<max type="double">1</max>
				</binding>
			</key>
       
			<key n="99">
				<name>c</name>
				<desc>Toggle canopy</desc>
				<binding>
					<command>nasal</command>
					<script>canopy.canopy_switch(2)</script>
				</binding>
			</key>
       
			<key n="100">
				<name>d</name>
				<desc>Fire rockets</desc>
				<binding>
					<command>nasal</command>
					<script>guns.fire_Rocket()</script>
				</binding>
				<mod-up>
					<binding>
						<command>nasal</command>
						<script>guns.stop_Rocket()</script>
					</binding>
				</mod-up>
			</key>
			
			<key n="101">
				<name>e</name>
				<desc>Eject</desc>
				<binding>
					<command>nasal</command>
					<script>Eject.eject();</script>
				</binding>
			</key>
       
			<key n="102">
				<name>f</name>
				<desc>Fire gun</desc>
				<binding>
					<command>property-assign</command>
					<property>controls/armament/trigger</property>
					<value>true</value>
				</binding>
				<mod-up>
					<binding>
						<command>property-assign</command>
						<property>controls/armament/trigger</property>
						<value>false</value>
					</binding>
				</mod-up>
			</key>
       
			<key n="110">
				<name>n</name>
				<desc>Retract speedbrake</desc>
				<binding>
					<command>property-adjust</command>
					<property>/controls/flight/speedbrake</property>
					<step type="double">-0.2</step>
					<min type="double">0</min>
					<max type="double">1</max>
				</binding>
			</key>
       
			<key n="113">
				<name>q</name>
				<desc>Deploy countermeasures</desc>
				<binding>
					<command>nasal</command>
					<script>guns.fire_FL()</script>
				</binding>
				<mod-up>
					<binding>
						<command>nasal</command>
						<script>guns.stop_FL()</script>
					</binding>
				</mod-up>
			</key>

		</keyboard>
