<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <particlesystem>
    <name>gun-smoke-fast</name>
    <texture>puff.png</texture>
    <emissive>false</emissive>
    <lighting>false</lighting>

    <offsets>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
      <pitch-deg>0</pitch-deg>
      <roll-deg>0</roll-deg>
    </offsets>

    <attach>world</attach>

    <placer>
      <type>point</type>
    </placer>

    <shooter>
      <theta-min-deg>-92</theta-min-deg>
      <theta-max-deg>-92</theta-max-deg>
      <phi-min-deg>0</phi-min-deg>
      <phi-max-deg>0</phi-max-deg>
      <speed-mps>
        <value>0.2</value>
        <spread>0</spread>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>0</x-min-deg-sec>
        <y-min-deg-sec>0</y-min-deg-sec>
        <z-min-deg-sec>0</z-min-deg-sec>
        <x-max-deg-sec>0</x-max-deg-sec>
        <y-max-deg-sec>0</y-max-deg-sec>
        <z-max-deg-sec>0</z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <value>43.5</value>
        <spread>0</spread>
      </particles-per-sec>
    </counter>

    <align>billboard</align>

    <particle>
      <start>
        <color>
          <!-- take color of the clouds and manipulate it slightly -->
          <red>
            <expression>
              <prod>
                <min>
                  <sum>
                    <property>/rendering/dome/cloud/red</property>
                    <prod>
                      <sqr>
                        <property>/rendering/dome/cloud/red</property>
                      </sqr>
                      <value>3</value>
                    </prod>
                  </sum>
                  <value>1</value>
                </min>
                <value>0.6</value>
              </prod>
            </expression>
          </red>
          <green>
            <expression>
              <prod>
                <min>
                  <sum>
                    <property>/rendering/dome/cloud/green</property>
                    <prod>
                      <sqr>
                        <property>/rendering/dome/cloud/green</property>
                      </sqr>
                      <value>3</value>
                    </prod>
                  </sum>
                  <value>1</value>
                </min>
                <value>0.6</value>
              </prod>
            </expression>
          </green>
          <blue>
            <expression>
              <prod>
                <min>
                  <sum>
                    <property>/rendering/dome/cloud/blue</property>
                    <prod>
                      <sqr>
                        <property>/rendering/dome/cloud/blue</property>
                      </sqr>
                      <value>2</value>
                    </prod>
                  </sum>
                  <value>1</value>
                </min>
                <value>0.6</value>
              </prod>
            </expression>
          </blue>
          <alpha>
            <value>0.5</value>
          </alpha>
        </color>
        <size>
          <value>0.3</value>
        </size>
      </start>
      <end>
        <color>
          <!-- take color of the clouds and manipulate it slightly -->
          <red>
            <expression>
              <prod>
                <min>
                  <sum>
                    <property>/rendering/dome/cloud/red</property>
                    <prod>
                      <sqr>
                        <property>/rendering/dome/cloud/red</property>
                      </sqr>
                      <value>3</value>
                    </prod>
                  </sum>
                  <value>1</value>
                </min>
                <value>0.6</value>
              </prod>
            </expression>
          </red>
          <green>
            <expression>
              <prod>
                <min>
                  <sum>
                    <property>/rendering/dome/cloud/green</property>
                    <prod>
                      <sqr>
                        <property>/rendering/dome/cloud/green</property>
                      </sqr>
                      <value>3</value>
                    </prod>
                  </sum>
                  <value>1</value>
                </min>
                <value>0.6</value>
              </prod>
            </expression>
          </green>
          <blue>
            <expression>
              <prod>
                <min>
                  <sum>
                    <property>/rendering/dome/cloud/blue</property>
                    <prod>
                      <sqr>
                        <property>/rendering/dome/cloud/blue</property>
                      </sqr>
                      <value>2</value>
                    </prod>
                  </sum>
                  <value>1</value>
                </min>
                <value>0.6</value>
              </prod>
            </expression>
          </blue>
          <alpha>
            <value>0.0</value>
          </alpha>
        </color>
        <size>
          <value>2</value>
        </size>
      </end>
      <life-sec>
        <value>2.0</value>
      </life-sec>
      <mass-kg>0.01</mass-kg>
      <radius-m>100</radius-m>

    </particle>

    <program>
      <fluid>air</fluid>
      <gravity type="bool">false</gravity>
      <wind type="bool">true</wind>
    </program>

  </particlesystem>

</PropertyList>