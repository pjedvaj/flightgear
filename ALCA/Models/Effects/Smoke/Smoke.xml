<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <particlesystem>
    <name>smoke</name>
    <texture>Smoke.png</texture>

    <emissive>false</emissive>
    <lighting>true</lighting>

    <condition>
      <and>
        <not>
          <property>sim/multiplay/generic/int[7]</property>
        </not>
        <greater-than>
          <property>engines/engine[0]/n2</property>
          <value>75</value>
        </greater-than>
        <greater-than>
          <property>sim/multiplay/generic/float[1]</property>
          <value>35</value>
        </greater-than>
      </and>
    </condition>

    <attach>world</attach>

    <placer>
      <type>point</type>
    </placer>

    <shooter>
      <theta-min-deg>90</theta-min-deg>
      <theta-max-deg>92</theta-max-deg>
      <phi-min-deg>-1.5</phi-min-deg>
      <phi-max-deg>1.5</phi-max-deg>
      <speed-mps>
        <property>engines/engine/n1</property>
        <factor>5</factor>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>0</x-min-deg-sec>
        <y-min-deg-sec>0</y-min-deg-sec>
        <z-min-deg-sec>0</z-min-deg-sec>
        <x-max-deg-sec>0</x-max-deg-sec>
        <y-max-deg-sec>0</y-max-deg-sec>
        <z-max-deg-sec>0</z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <property>engines/engine/n1</property>
        <factor>1</factor>
        <spread>20</spread>
      </particles-per-sec>
    </counter>

    <align>billboard</align>

    <!-- alpha matched to approximate real smoke visibility -->
    <particle>
      <start>
        <color>
          <!-- take color of the clouds and manipulate it slightly -->
          <red>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/red</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/red</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </red>
          <green>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/green</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/green</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </green>
          <blue>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/blue</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/blue</property>
                  </sqr>
                  <value>2</value>
                </prod>
              </sum>
            </expression>
          </blue>
          <alpha>
            <value> 0.0220 </value>
          </alpha>
        </color>
        <size>
          <value>0.75</value>
        </size>
      </start>

      <end>
        <color>
          <!-- take color of the clouds and manipulate it slightly -->
          <red>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/red</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/red</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </red>
          <green>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/green</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/green</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </green>
          <blue>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/blue</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/blue</property>
                  </sqr>
                  <value>2</value>
                </prod>
              </sum>
            </expression>
          </blue>
          <alpha>
            <value> 0.0100 </value>
          </alpha>
        </color>
        <size>
          <value>8.0</value>
        </size>
      </end>

      <life-sec>
        <value>7.0</value>
      </life-sec>

      <mass-kg>0.05</mass-kg>
      <radius-m>0.05</radius-m>
    </particle>

    <program>
      <fluid>   air  </fluid>
      <gravity> true </gravity>
      <wind>    true </wind>
    </program>

  </particlesystem>

</PropertyList>