<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <particlesystem>
    <name>tiptrail</name>
    <type>trail</type>
    <texture>continous_smoke.png</texture>
    <emissive>false</emissive>
    <lighting>false</lighting>
    <pass>true</pass>

    <condition>
      <and>
        <not>
          <property>sim/multiplay/generic/int[7]</property>
        </not>
        <greater-than>
          <property>/environment/relative-humidity</property>
          <value>50</value>
        </greater-than>
        <greater-than>
          <property>sim/multiplay/generic/float[1]</property>
          <value>125</value>
        </greater-than>
        <or>
          <or>
            <less-than>
              <property>surface-positions/left-aileron-pos-norm</property>
              <value>-0.38</value>
            </less-than>
            <greater-than>
              <property>surface-positions/left-aileron-pos-norm</property>
              <value>0.1</value>
            </greater-than>
          </or>
          <or>
            <less-than>
              <property>sim/multiplay/generic/float[0]</property>
              <value>-2.2</value>
            </less-than>
            <greater-than>
              <property>sim/multiplay/generic/float[0]</property>
              <value>2.2</value>
            </greater-than>
          </or>
        </or>
      </and>
    </condition>

    <attach>world</attach>

    <placer>
      <type>point</type>
    </placer>

    <shooter>
      <speed-mps>
        <value>0</value>
        <spread>0</spread>
      </speed-mps>
    </shooter>

    <counter>
      <particles-per-sec>
        <property>sim/multiplay/generic/float[1]</property>
        <factor>1</factor>
        <offset>75</offset>
      </particles-per-sec>
    </counter>

    <align>fixed</align>

    <particle>
      <start>
        <color>
          <!-- take color of the clouds and manipulate it slightly -->
          <red>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/red</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/red</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </red>
          <green>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/green</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/green</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </green>
          <blue>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/blue</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/blue</property>
                  </sqr>
                  <value>2</value>
                </prod>
              </sum>
            </expression>
          </blue>
          <alpha>
            <value> 0.1 </value>
          </alpha>
        </color>
        <size>
          <value>0.10</value>
        </size>
      </start>

      <end>
        <color>
          <!-- take color of the clouds and manipulate it slightly -->
          <red>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/red</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/red</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </red>
          <green>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/green</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/green</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </green>
          <blue>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/blue</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/blue</property>
                  </sqr>
                  <value>2</value>
                </prod>
              </sum>
            </expression>
          </blue>
          <alpha>
            <value> 0.00 </value>
          </alpha>
        </color>
        <size>
          <value>1.0</value>
        </size>
      </end>

      <life-sec>
        <value>1.2</value>
      </life-sec>

      <mass-kg>0.01</mass-kg>
      <radius-m>0.1</radius-m>
    </particle>

    <program>
      <fluid>   air  </fluid>
      <gravity> false </gravity>
      <wind>    true </wind>
    </program>

  </particlesystem>

</PropertyList>