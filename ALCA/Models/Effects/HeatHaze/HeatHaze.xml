<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <particlesystem>
    <name>heatHaze</name>
    <texture>HeatHaze.png</texture>
    <type>normal</type>

    <emissive>false</emissive>
    <lighting>false</lighting>

    <condition>
      <and>
        <not>
          <property>sim/multiplay/generic/int[7]</property>
        </not>
        <greater-than>
          <property>engines/engine[0]/n2</property>
          <value>85</value>
        </greater-than>
        <less-than>
          <property>sim/multiplay/generic/float[1]</property>
          <value>200</value>
        </less-than>
      </and>
    </condition>

    <attach>world</attach>

    <placer>
      <type>point</type>
    </placer>

    <shooter>
      <theta-min-deg>90</theta-min-deg>
      <theta-max-deg>92</theta-max-deg>
      <phi-min-deg>-1.5</phi-min-deg>
      <phi-max-deg>1.5</phi-max-deg>
      <speed-mps>
        <property>engines/engine/n2</property>
        <factor>0.3</factor>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>0</x-min-deg-sec>
        <y-min-deg-sec>0</y-min-deg-sec>
        <z-min-deg-sec>-600</z-min-deg-sec>
        <x-max-deg-sec>0</x-max-deg-sec>
        <y-max-deg-sec>0</y-max-deg-sec>
        <z-max-deg-sec>600</z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <expression>
          <sum>
            <product>
              <property>engines/engine/n2</property>
              <value>0.2</value>
            </product>
            <product>
              <property>sim/multiplay/generic/float[1]</property>
              <value>0.5</value>
            </product>
          </sum>
        </expression>
      </particles-per-sec>
    </counter>

    <align>billboard</align>

    <particle>
      <start>
        <color>
          <!-- take color of the clouds and manipulate it slightly -->
          <red>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/red</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/red</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </red>
          <green>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/green</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/green</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </green>
          <blue>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/blue</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/blue</property>
                  </sqr>
                  <value>2</value>
                </prod>
              </sum>
            </expression>
          </blue>
          <alpha>
            <expression>
              <min>
                <product>
                  <sum>
                    <product>
                      <property>sim/multiplay/generic/float[1]</property>
                      <value>-1</value>
                    </product>
                    <value>180</value>
                  </sum>
                  <value>0.005</value>
                </product>
                <value>0.14</value>
              </min>
            </expression>
          </alpha>
        </color>
        <size>
          <value>0.5</value>
        </size>
      </start>

      <end>
        <color>
          <!-- take color of the clouds and manipulate it slightly -->
          <red>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/red</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/red</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </red>
          <green>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/green</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/green</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </green>
          <blue>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/blue</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/blue</property>
                  </sqr>
                  <value>2</value>
                </prod>
              </sum>
            </expression>
          </blue>
          <alpha>
            <expression>
              <min>
                <product>
                  <sum>
                    <product>
                      <property>sim/multiplay/generic/float[1]</property>
                      <value>-1</value>
                    </product>
                    <value>180</value>
                  </sum>
                  <value>0.002</value>
                </product>
                <value>0.07</value>
              </min>
            </expression>
          </alpha>
        </color>
        <size>
          <value>1.5</value>
        </size>
      </end>

      <life-sec>
        <value>0.8</value>
      </life-sec>

      <mass-kg>0.05</mass-kg>
      <radius-m>0.02</radius-m>
    </particle>

    <program>
      <fluid>   air  </fluid>
      <gravity> true </gravity>
      <wind>    true </wind>
    </program>

  </particlesystem>

</PropertyList>