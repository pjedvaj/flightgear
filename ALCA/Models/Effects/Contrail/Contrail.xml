<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <particlesystem>
    <name>Conrail</name>
    <texture>Contrail.png</texture>

    <emissive type="bool">false</emissive>
    <lighting type="bool">false</lighting>
    <pass>true</pass>

    <condition>
      <and>
        <not>
          <property>sim/multiplay/generic/int[7]</property>
        </not>
        <property>environment/contrail</property>
        <greater-than>
          <property>engines/engine[0]/n2</property>
          <value>75</value>
        </greater-than>
        <or>
          <greater-than>
            <property>velocities/uBody-fps</property>
            <value>10</value>
          </greater-than>
          <greater-than>
            <property>velocities/vBody-fps</property>
            <value>10</value>
          </greater-than>
          <greater-than>
            <property>velocities/wBody-fps</property>
            <value>10</value>
          </greater-than>
        </or>
      </and>
    </condition>

    <attach>world</attach>

    <placer>
      <type>point</type>
    </placer>

    <shooter>
      <theta-min-deg>0</theta-min-deg>
      <theta-max-deg>0</theta-max-deg>
      <phi-min-deg>0</phi-min-deg>
      <phi-max-deg>0</phi-max-deg>
      <speed-mps>
        <value>0</value>
        <spread>0</spread>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>0</x-min-deg-sec>
        <y-min-deg-sec>0</y-min-deg-sec>
        <z-min-deg-sec>0</z-min-deg-sec>
        <x-max-deg-sec>0</x-max-deg-sec>
        <y-max-deg-sec>0</y-max-deg-sec>
        <z-max-deg-sec>0</z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <expression>
          <prod>
            <sqrt>
              <sum>
                <sqr>
                  <property>velocities/uBody-fps</property>
                </sqr>
                <sqr>
                  <property>velocities/vBody-fps</property>
                </sqr>
                <sqr>
                  <property>velocities/wBody-fps</property>
                </sqr>
              </sum>
            </sqrt>
            <value>0.22</value>
          </prod>
        </expression>
      </particles-per-sec>
    </counter>

    <align>billboard</align>

    <particle>
      <start>
        <color>
          <!-- take color of the clouds and manipulate it slightly -->
          <red>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/red</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/red</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </red>
          <green>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/green</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/green</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </green>
          <blue>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/blue</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/blue</property>
                  </sqr>
                  <value>2</value>
                </prod>
              </sum>
            </expression>
          </blue>
          <alpha>
            <value> 0.3 </value>
          </alpha>
        </color>
        <size>
          <value>0.6</value>
        </size>
      </start>

      <end>
        <color>
          <!-- take color of the clouds and manipulate it slightly -->
          <red>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/red</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/red</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </red>
          <green>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/green</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/green</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </green>
          <blue>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/blue</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/blue</property>
                  </sqr>
                  <value>2</value>
                </prod>
              </sum>
            </expression>
          </blue>
          <alpha>
            <value> 0.07 </value>
          </alpha>
        </color>
        <size>
          <value>12</value>
        </size>
      </end>

      <life-sec>
        <value>15</value>
      </life-sec>

      <mass-kg>  0.05 </mass-kg>
      <radius-m> 0.5 </radius-m>
    </particle>

    <program>
      <fluid>               air  </fluid>
      <gravity type="bool"> true </gravity>
      <wind typ="bool">     true </wind>
    </program>

  </particlesystem>

</PropertyList>