<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <particlesystem>
    <name>vapour</name>
    <type>normal</type>
    <texture>vapour.png</texture>
    <emissive>false</emissive>
    <lighting>false</lighting>
    <pass>true</pass>

    <condition>
      <and>
        <not>
          <property>sim/multiplay/generic/int[7]</property>
        </not>
        <greater-than>
          <property>/environment/relative-humidity</property>
          <value>60</value>
        </greater-than>
        <greater-than>
          <property>/environment/temperature-degc</property>
          <value>0</value>
        </greater-than>
        <greater-than>
          <property>sim/multiplay/generic/float[1]</property>
          <value>280</value>
        </greater-than>
        <greater-than>
          <property>sim/multiplay/generic/float[0]</property>
          <value>5.0</value>
        </greater-than>
      </and>
    </condition>

    <attach>world</attach>

    <placer>
      <type>point</type>
    </placer>

    <shooter>
      <speed-mps>
        <value>0</value>
        <spread>0</spread>
      </speed-mps>

    </shooter>

    <counter>
      <particles-per-sec>
        <property>sim/multiplay/generic/float[1]</property>
        <factor>8</factor>
        <offset>75</offset>
      </particles-per-sec>
    </counter>

    <align>billboard</align>

    <particle>
      <start>
        <color>
          <!-- take color of the clouds and manipulate it slightly -->
          <red>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/red</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/red</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </red>
          <green>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/green</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/green</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </green>
          <blue>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/blue</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/blue</property>
                  </sqr>
                  <value>2</value>
                </prod>
              </sum>
            </expression>
          </blue>
          <alpha>
            <property>sim/multiplay/generic/float[0]</property>
            <factor>0.0022</factor>
            <offset>0</offset>
          </alpha>
        </color>
        <size>
          <value>0.25</value>
        </size>
      </start>

      <end>
        <color>
          <!-- take color of the clouds and manipulate it slightly -->
          <red>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/red</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/red</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </red>
          <green>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/green</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/green</property>
                  </sqr>
                  <value>3</value>
                </prod>
              </sum>
            </expression>
          </green>
          <blue>
            <expression>
              <sum>
                <property>/rendering/dome/cloud/blue</property>
                <prod>
                  <sqr>
                    <property>/rendering/dome/cloud/blue</property>
                  </sqr>
                  <value>2</value>
                </prod>
              </sum>
            </expression>
          </blue>
          <alpha>
            <value> 0.00 </value>
          </alpha>
        </color>
        <size>
          <value>0.25</value>
        </size>
      </end>

      <life-sec>
        <value>0.02</value>
      </life-sec>

      <mass-kg>0.01</mass-kg>
      <radius-m>0.1</radius-m>
    </particle>

    <program>
      <fluid>   air  </fluid>
      <gravity> false </gravity>
      <wind>    true </wind>
    </program>

  </particlesystem>

</PropertyList>