<?xml version="1.0"?>

<PropertyList>

  <fx>

    <engine>
      <name>engine</name>
      <path>Sounds/jet.wav</path>
      <condition>
        <not>
          <property>sim/multiplay/generic/int[7]</property>
        </not>
      </condition>
      <mode>looped</mode>
      <property>engines/engine/running</property>
      <volume>
        <property>engines/engine/prop-thrust</property>
        <type>lin</type>
        <factor>0.000315457</factor>
        <!-- Scales to 0-2 for 6340lb engine -->
      </volume>
    </engine>

    <engine>
      <name>whine</name>
      <path>Aircraft/ALCA/Sounds/whine.wav</path>
      <condition>
        <not>
          <property>sim/multiplay/generic/int[7]</property>
        </not>
      </condition>
      <mode>looped</mode>
      <property>engines/engine/running</property>
      <pitch>
        <property>engines/engine/n1</property>
        <type>lin</type>
        <factor>.005</factor>
      </pitch>
      <volume>
        <property>engines/engine/n1</property>
        <type>log</type>
        <factor>0.1</factor>
        <!-- 10-100% rpm == 0.1 - 1 factor -->
        <max>0.05</max>
      </volume>
    </engine>

    <rumble>
      <name>rumble</name>
      <mode>looped</mode>
      <path>Sounds/rumble.wav</path>
      <condition>
        <or>
          <property>gear/gear[0]/wow</property>
          <property>gear/gear[1]/wow</property>
          <property>gear/gear[2]/wow</property>
        </or>
      </condition>
      <volume>
        <property>velocities/groundspeed-kt</property>
        <type>lin</type>
        <factor>.012</factor>
      </volume>
    </rumble>

    <engine-wake>
      <name>Engine Wake</name>
      <mode>looped</mode>
      <path>wake.wav</path>
      <condition>
        <not>
          <property>sim/multiplay/generic/int[7]</property>
        </not>
      </condition>
      <position>
        <x>5</x>
        <y>0</y>
        <z>-0.25</z>
      </position>
      <orientation>
        <x>1</x>
        <y>0</y>
        <z>0</z>
        <inner-angle>30.0</inner-angle>
        <outer-angle>90.0</outer-angle>
        <outer-gain>0.2</outer-gain>
      </orientation>
      <volume>
        <property>engines/engine/n1</property>
        <factor>0.1</factor>
        <offset>-7.0</offset>
        <min>0.00</min>
        <max>10</max>
      </volume>
      <volume>
        <property>velocities/groundspeed-kt</property>
        <factor>0.0175</factor>
        <offset>0.25</offset>
        <min>0.00</min>
        <max>1.1</max>
      </volume>
      <reference-dist>80</reference-dist>
      <max-dist>12000</max-dist>
    </engine-wake>

    <gear>
      <name>gear</name>
      <mode>in-transit</mode>
      <path>Sounds/gear.wav</path>
      <property>gear/gear[0]/position-norm</property>
      <pitch>
        <internal>dt_play</internal>
        <offset>1.0</offset>
        <factor>-0.001</factor>
      </pitch>
    </gear>

    <gear>
      <name>gear-lock</name>
      <path>Sounds/gear-lck.wav</path>
      <condition>
        <or>
          <equals>
            <property>gear/gear[0]/position-norm</property>
            <value>0</value>
          </equals>
          <equals>
            <property>gear/gear[0]/position-norm</property>
            <value>1</value>
          </equals>
        </or>
      </condition>
    </gear>

    <squeal>
      <name>squeal</name>
      <path>Sounds/squeal.wav</path>
      <condition>
        <or>
          <property>gear/gear[0]/wow</property>
          <property>gear/gear[1]/wow</property>
          <property>gear/gear[2]/wow</property>
        </or>
      </condition>
      <volume>
        <property>velocities/speed-down-fps</property>
        <factor>0.05</factor>
      </volume>
      <volume>
        <property>velocities/groundspeed-kt</property>
        <factor>0.01</factor>
      </volume>
      <volume>
        <internal>dt_stop</internal>
        <factor>0.05</factor>
        <max>1.0</max>
      </volume>
      <pitch>
        <property>velocities/airspeed-kt</property>
        <factor>0.0025</factor>
        <offset>1.2</offset>
      </pitch>
    </squeal>

    <flap>
      <name>flaps</name>
      <mode>in-transit</mode>
      <path>Sounds/flaps.wav</path>
      <property>surface-positions/flap-pos-norm</property>
      <volume>
        <offset>0.25</offset>
      </volume>
    </flap>

    <wind>
      <name>wind</name>
      <mode>looped</mode>
      <path>Sounds/wind.wav</path>
      <condition>
        <not>
          <property>sim/multiplay/generic/int[7]</property>
        </not>
      </condition>
      <property>velocities/airspeed-kt</property>
      <volume>
        <property>position/altitude-ft</property>
        <factor>-0.000015</factor>
        <offset>1.0</offset>
        <min>0.1</min>
        <max>1.0</max>
      </volume>
      <volume>
        <property>velocities/airspeed-kt</property>
        <factor>0.0015</factor>
        <min>0.03</min>
        <max>0.25</max>
      </volume>
      <pitch>
        <property>velocities/airspeed-kt</property>
        <factor>0.01</factor>
        <offset>1.25</offset>
      </pitch>
    </wind>

    <stall>
      <name>stall</name>
      <type>avionics</type>
      <mode>looped</mode>
      <path>Sounds/stall.wav</path>
      <condition>
        <and>
          <not>
            <property>sim/crashed</property>
          </not>
          <less-than>
            <property>velocities/airspeed-kt</property>
            <value>405</value>
          </less-than>
          <not>
            <or>
              <property>gear/gear[0]/wow</property>
              <property>gear/gear[1]/wow</property>
              <property>gear/gear[2]/wow</property>
            </or>
          </not>
        </and>
      </condition>
      <volume>
        <!-- Results in smooth fade in from 135 to 120 KIAS -->
        <!-- Solve[a*1/135 + o == 0 && a*1/120 + o == 1, {a, o}] -->
        <property>velocities/airspeed-kt</property>
        <type>inv</type>
        <factor>1080.0</factor>
        <offset>-8.0</offset>
      </volume>
    </stall>

    <speedbrake>
      <name>speedbrake</name>
      <mode>in-transit</mode>
      <path>Sounds/whine.wav</path>
      <property>surface-positions/speedbrake-pos-norm</property>
      <volume>
        <offset>0.125</offset>
        <min>0.1</min>
        <max>0.9</max>
      </volume>
    </speedbrake>

    <rumble>
      <name>speedbrake rumble</name>
      <mode>looped</mode>
      <path>Sounds/rumble.wav</path>
      <condition>
        <greater-than>
          <property>surface-positions/speedbrake-pos-norm</property>
          <value>0.1</value>
        </greater-than>
      </condition>
      <volume>
        <property>position/altitude-ft</property>
        <factor>-0.000015</factor>
        <offset>1.0</offset>
        <min>0.125</min>
        <max>1.0</max>
      </volume>
      <volume>
        <property>velocities/airspeed-kt</property>
        <factor>0.012</factor>
        <min>0.0</min>
        <max>1.0</max>
      </volume>
    </rumble>

    <voice>
      <name>Geforce-breath-vox</name>
      <path>Aircraft/ALCA/Sounds/geforceOff.wav</path>
      <condition>
        <and>
          <greater-than>
            <property>/accelerations/pilot/z-accel-fps_sec</property>
            <value>-161</value>
          </greater-than>
          <equals>
            <property>sim/current-view/view-number</property>
            <value>0</value>
          </equals>
        </and>
      </condition>
      <volume>
        <factor>0.9</factor>
      </volume>
    </voice>

    <voice>
      <name>Geforce-vox</name>
      <path>Aircraft/ALCA/Sounds/geforceOn.wav</path>
      <condition>
        <and>
          <less-than>
            <property>/accelerations/pilot/z-accel-fps_sec</property>
            <value>-225</value>
          </less-than>
          <equals>
            <property>sim/current-view/view-number</property>
            <value>0</value>
          </equals>
        </and>
      </condition>
      <volume>
        <factor>0.9</factor>
      </volume>
    </voice>

    <cannon>
      <name>Plamen Cannon fire</name>
      <mode>looped</mode>
      <path>Sounds/gatling.wav</path>
      <condition>
        <property>sim/multiplay/generic/int[6]</property>
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
    </cannon>

    <explosion>
      <name>Explosion</name>
      <mode>once</mode>
      <path>Explosion.wav</path>
      <condition>
        <property>disintegration/explosion/fire</property>
      </condition>
      <volume>
        <value>1</value>
      </volume>
      <reference-dist>1500</reference-dist>
      <max-dist>10000</max-dist>
    </explosion>

    <fire>
      <name>Fire</name>
      <mode>looped</mode>
      <path>Fire.wav</path>
      <condition>
        <property>disintegration/explosion/fire</property>
      </condition>
      <volume>
        <value>1</value>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>4000</max-dist>
    </fire>

  </fx>

</PropertyList>