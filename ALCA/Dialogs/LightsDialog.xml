<?xml version="1.0"?>

<PropertyList>

  <name>LightsDialog</name>
  <layout>vbox</layout>
  <x>-100</x>
  <y>-100</y>
  <pref-width>350</pref-width>

  <group>
    <layout>hbox</layout>
    <empty>
      <stretch>1</stretch>
    </empty>

    <text>
      <label>ALCA external lights control</label>
    </text>

    <empty>
      <stretch>1</stretch>
    </empty>

    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>

      <binding>
        <command>nasal</command>
        <script>ALCA.lights_dialog.close()</script>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

  <hrule>
    <whatever/>
  </hrule>

  <group>
    <layout>hbox</layout>

    <empty>
      <pref-width>4</pref-width>
    </empty>

    <checkbox>
      <width>30</width>
      <height>30</height>
      <property>/controls/lighting/nav-lights-switch</property>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <binding>
        <command>dialog-update</command>
      </binding>
    </checkbox>
    <button>
      <halign>left</halign>
      <legend>Nav lights</legend>
      <binding>
        <command>property-toggle</command>
        <property>/controls/lighting/nav-lights-switch</property>
      </binding>
      <binding>
        <command>dialog-update</command>
      </binding>
    </button>

    <empty>
      <pref-width>22</pref-width>
    </empty>

    <checkbox>
      <width>30</width>
      <height>30</height>
      <property>/controls/lighting/beacon-switch</property>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <binding>
        <command>dialog-update</command>
      </binding>
    </checkbox>
    <button>
      <halign>left</halign>
      <legend>Beacon</legend>

      <binding>
        <command>property-toggle</command>
        <property>/controls/lighting/beacon-switch</property>
      </binding>
      <binding>
        <command>dialog-update</command>
      </binding>
    </button>

    <empty>
      <stretch>1</stretch>
    </empty>
  </group>

  <group>
    <layout>hbox</layout>
    <empty>
      <pref-width>4</pref-width>
    </empty>

    <checkbox>
      <width>30</width>
      <height>30</height>
      <property>/controls/lighting/landing-lights-switch</property>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <binding>
        <command>dialog-update</command>
      </binding>
    </checkbox>
    <button>
      <halign>left</halign>
      <legend>Landing lights</legend>
      <binding>
        <command>property-toggle</command>
        <property>/controls/lighting/landing-lights-switch</property>
      </binding>
      <binding>
        <command>dialog-update</command>
      </binding>
    </button>

    <empty>
      <pref-width>0</pref-width>
    </empty>

    <checkbox>
      <width>30</width>
      <height>30</height>
      <property>/controls/lighting/taxi-light-switch</property>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <binding>
        <command>dialog-update</command>
      </binding>
    </checkbox>
    <button>
      <halign>left</halign>
      <legend>Taxi light/Probe light</legend>
      <binding>
        <command>property-toggle</command>
        <property>/controls/lighting/taxi-light-switch</property>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>/controls/lighting/probe-light-switch</property>
      </binding>
      <binding>
        <command>dialog-update</command>
      </binding>
    </button>

    <empty>
      <stretch>1</stretch>
    </empty>
  </group>

  <empty>
    <pref-height>3</pref-height>
  </empty>

  <group>
    <layout>hbox</layout>
    <empty>
      <pref-width>4</pref-width>
    </empty>

    <text>
      <label>Formation lights:</label>
    </text>

    <empty>
      <pref-width>20</pref-width>
    </empty>

    <slider>
      <property>/sim/multiplay/generic/float[5]</property>
      <live>true</live>
      <max>1.0</max>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </slider>

    <text>
      <label>0</label>
      <format>%.2f</format>
      <live>true</live>
      <property>/sim/multiplay/generic/float[5]</property>
    </text>

    <empty>
      <stretch>1</stretch>
    </empty>
  </group>

  <empty>
    <pref-height>5</pref-height>
  </empty>

  <group>
    <layout>hbox</layout>
    <empty>
      <stretch>1</stretch>
    </empty>

    <button>
      <halign>center</halign>
      <legend>Close</legend>
      <binding>
        <command>nasal</command>
        <script>ALCA.lights_dialog.close()</script>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
      <default>true</default>
    </button>

    <empty>
      <stretch>1</stretch>
    </empty>
  </group>
  <empty>
    <pref-height>3</pref-height>
  </empty>

</PropertyList>